<UserControl x:Class="QuickStartMenu.Controls.QuickStartEntry.QuickStartEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:quickStartEntry="clr-namespace:QuickStartMenu.Controls.QuickStartEntry"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0" Source="{Binding (quickStartEntry:QuickStartEntryModel.Icon)}"></Image>
        <TextBox Grid.Column="1" Text="{Binding (quickStartEntry:QuickStartEntryModel.Name)}"></TextBox>
        <TextBox Grid.Column="2" Text="{Binding (quickStartEntry:QuickStartEntryModel.Path)}"></TextBox>
    </Grid>
</UserControl>
